<%= form_for(@application, :url => user_applications_path, :html => {:multipart => true} ) do |f| %>
  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
      <% @application.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>

    <span id='application_description_length'><%= @application.description.length if @application.description %></span>

  </div>
  <div class="field">
    <%= f.label :version %><br />
    <%= f.text_field :version %>
  </div>

  <div class="field">
      <%= f.label :appexecutable %><br />
      <%= f.file_field :appexecutable %>
  </div>

  <div class="field">
      <%= f.label :appimage %><br />
      <%= f.file_field :appimage %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<script type='text/javascript'>
$('#application_description').bind( 'keyup', function() {
	var text = $(this).parent().find('#application_description_length');
	text.html( $(this).val().length );
} );
</script>

<% end %>
